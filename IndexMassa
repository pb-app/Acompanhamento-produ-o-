<script>
    // --- FUNÇÃO PARA OBTER DATA LOCAL ---
    function obterDataLocalFormatada() {
        const data = new Date();
        const ano = data.getFullYear();
        const mes = String(data.getMonth() + 1).padStart(2, '0');
        const dia = String(data.getDate()).padStart(2, '0');
        return `${ano}-${mes}-${dia}`;
    }

    // --- LÓGICA DE CONFIGURAÇÕES ---
    function salvarConfiguracoes() {
        const senha = document.getElementById('configSenha').value;
        if (senha !== 'pb2025') {
            alert('Senha incorreta!');
            return;
        }

        const config = {
            pesoFiltro: document.getElementById('pesoFiltro').value,
            pesoPlaca: document.getElementById('pesoPlaca').value,
            metaKgFT: document.getElementById('metaKgFT').value,
            metaKgPalete: document.getElementById('metaKgPalete').value
        };

        localStorage.setItem('configMassa', JSON.stringify(config));
        alert('Configurações salvas com sucesso!');
        document.getElementById('configSenha').value = '';
        renderizarHistorico(); // Atualiza a tabela com as novas metas
    }

    function carregarConfiguracoes() {
        const configSalva = localStorage.getItem('configMassa');
        if (configSalva) {
            const config = JSON.parse(configSalva);
            document.getElementById('pesoFiltro').value = config.pesoFiltro || '4100';
            document.getElementById('pesoPlaca').value = config.pesoPlaca || '39.1';
            document.getElementById('metaKgFT').value = config.metaKgFT || '12300';
            document.getElementById('metaKgPalete').value = config.metaKgPalete || '12500';
        }
    }

    // --- LÓGICA DO FORMULÁRIO E DADOS ---
    document.getElementById('formMassa').addEventListener('submit', function(event) {
        event.preventDefault();

        // 1. Pega os pesos e metas salvos
        const config = JSON.parse(localStorage.getItem('configMassa')) || {};
        const pesoFiltro = parseFloat(config.pesoFiltro || document.getElementById('pesoFiltro').value);
        const pesoPlaca = parseFloat(config.pesoPlaca || document.getElementById('pesoPlaca').value);

        // 2. Pega os dados do formulário
        const qtdFT = parseInt(document.getElementById('qtdFT').value);
        const qtdPlacas = parseInt(document.getElementById('qtdPlacas').value);

        // 3. Calcula o KG Teórico
        const kgCalculado = (qtdFT * pesoFiltro) + (qtdPlacas * pesoPlaca);

        const novoRegistro = {
            id: Date.now(), // ID único para o registro
            data: document.getElementById('data').value,
            turno: document.getElementById('turno').value,
            qtdFT: qtdFT,
            qtdPlacas: qtdPlacas,
            kgPalete: parseFloat(document.getElementById('kgPalete').value),
            observacao: document.getElementById('observacao').value,
            kgCalculado: kgCalculado
        };

        // 4. Salva no localStorage
        const historico = JSON.parse(localStorage.getItem('historicoMassa')) || [];
        historico.push(novoRegistro);
        localStorage.setItem('historicoMassa', JSON.stringify(historico));

        // 5. Atualiza a tela
        renderizarHistorico();
        alert('Produção lançada com sucesso!');
        this.reset();
        document.getElementById('data').value = obterDataLocalFormatada();
    });
    
    // --- LÓGICA DO HISTÓRICO E FILTROS ---
    function renderizarHistorico() {
        const historico = JSON.parse(localStorage.getItem('historicoMassa')) || [];
        const config = JSON.parse(localStorage.getItem('configMassa')) || {};
        const metaKgFT = parseFloat(config.metaKgFT || document.getElementById('metaKgFT').value) || 1;
        const metaKgPalete = parseFloat(config.metaKgPalete || document.getElementById('metaKgPalete').value) || 1;
        
        const tbody = document.getElementById('tabelaHistoricoBody');
        tbody.innerHTML = '';

        // Aplica os filtros
        const filtroDataInicio = document.getElementById('filtroDataInicio').value;
        const filtroDataFim = document.getElementById('filtroDataFim').value;
        const filtroTurno = document.getElementById('filtroTurno').value;

        const dadosFiltrados = historico.filter(reg => {
            const dataReg = new Date(reg.data + 'T00:00:00'); // Adiciona T00:00 para evitar problemas de fuso
            if (filtroDataInicio && dataReg < new Date(filtroDataInicio + 'T00:00:00')) return false;
            if (filtroDataFim && dataReg > new Date(filtroDataFim + 'T00:00:00')) return false;
            if (filtroTurno && reg.turno !== filtroTurno) return false;
            return true;
        }).sort((a, b) => new Date(b.data) - new Date(a.data)); // Ordena do mais novo para o mais antigo

        if (dadosFiltrados.length === 0) {
            tbody.innerHTML = '<tr><td colspan="9">Nenhum registro encontrado.</td></tr>';
            return;
        }

        dadosFiltrados.forEach(reg => {
            const eficFT = (reg.kgCalculado / metaKgFT) * 100;
            const eficPalete = (reg.kgPalete / metaKgPalete) * 100;

            const getEficClass = (perc) => {
                if (perc >= 98) return 'efficiency-good';
                if (perc >= 90) return 'efficiency-ok';
                return 'efficiency-bad';
            };

            const tr = document.createElement('tr');
            tr.innerHTML = `
                <td>${new Date(reg.data + 'T00:00:00').toLocaleDateString('pt-BR')}</td>
                <td>${reg.turno}</td>
                <td>${reg.qtdFT}</td>
                <td>${reg.qtdPlacas}</td>
                <td>${reg.kgCalculado.toFixed(2)} kg</td>
                <td>${reg.kgPalete.toFixed(2)} kg</td>
                <td class="${getEficClass(eficFT)}">${eficFT.toFixed(2)}%</td>
                <td class="${getEficClass(eficPalete)}">${eficPalete.toFixed(2)}%</td>
                <td>
                    <button class="delete-btn" onclick="deletarRegistro(${reg.id})">Excluir</button>
                </td>
            `;
            tbody.appendChild(tr);
        });
    }

    function deletarRegistro(id) {
        if (!confirm('Tem certeza que deseja excluir este lançamento?')) {
            return;
        }
        let historico = JSON.parse(localStorage.getItem('historicoMassa')) || [];
        historico = historico.filter(reg => reg.id !== id);
        localStorage.setItem('historicoMassa', JSON.stringify(historico));
        renderizarHistorico();
        alert('Registro excluído.');
    }

    // --- INICIALIZAÇÃO DA PÁGINA ---
    document.addEventListener('DOMContentLoaded', () => {
        // Define a data de hoje nos campos de data
        const hoje = obterDataLocalFormatada();
        document.getElementById('data').value = hoje;
        document.getElementById('filtroDataInicio').value = hoje;
        document.getElementById('filtroDataFim').value = hoje;

        // Adiciona listeners aos filtros
        document.getElementById('filtroDataInicio').addEventListener('change', renderizarHistorico);
        document.getElementById('filtroDataFim').addEventListener('change', renderizarHistorico);
        document.getElementById('filtroTurno').addEventListener('change', renderizarHistorico);
        
        // Carrega as configurações e o histórico
        carregarConfiguracoes();
        renderizarHistorico();
    });

</script>
</body>
</html>

